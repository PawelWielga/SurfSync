<Window x:Class="SurfSync.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SurfSync"
        mc:Ignorable="d"
        Title="SurfSync"
        Height="560"
        Width="900"
        MinHeight="250"
        MinWidth="340"
        ResizeMode="CanResize"
        FontFamily="Segoe UI Variable Text"
        Background="{DynamicResource AppBackgroundBrush}"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="BottomBarButtonStyle" TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
            <Setter Property="MinHeight" Value="24"/>
            <Setter Property="MinWidth" Value="86"/>
            <Setter Property="Padding" Value="10,3"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Resources>

    <Grid Background="{DynamicResource AppBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Margin="12,12,12,8"
                CornerRadius="8"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1">
            <Frame x:Name="MainFrame"
                   Background="Transparent"/>
        </Border>

        <Border Grid.Row="1"
                Height="36"
                Background="{DynamicResource SurfaceAltBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1,1,0,0">
            <Grid Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <TextBlock Text="SurfSync"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                    <TextBlock Text="  by DIHOR PAWEL WIELGA"
                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="Opcje"
                        VerticalAlignment="Center"
                        Style="{StaticResource BottomBarButtonStyle}"
                        Click="OptionsButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
