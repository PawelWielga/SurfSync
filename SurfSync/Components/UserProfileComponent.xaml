<UserControl x:Class="SurfSync.Components.UserProfileComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SurfSync.Components"
             mc:Ignorable="d"
             d:DesignHeight="120"
             d:DesignWidth="100"
             Background="Transparent">
    <Button Click="CardButton_Click"
            Width="90"
            Margin="8"
            Background="Transparent"
            BorderThickness="0"
            Padding="0"
            Cursor="Hand"
            FocusVisualStyle="{x:Null}">
        <Button.Template>
            <ControlTemplate TargetType="Button">
                <Border Background="Transparent">
                    <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                </Border>
            </ControlTemplate>
        </Button.Template>

        <StackPanel>
            <Border x:Name="CircleBorder"
                    Width="72"
                    Height="72"
                    CornerRadius="36"
                    Background="{DynamicResource TagBackgroundBrush}"
                    HorizontalAlignment="Center">
                <TextBlock x:Name="ProfileInitialTextBlock"
                           Text="{Binding ProfileInitial, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           FontSize="34"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource AccentBrush}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <TextBlock x:Name="ProfileNameTextBlock"
                       Text="{Binding Profile.Name, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       Margin="0,3,0,0"
                       FontSize="12"
                       FontWeight="SemiBold"
                       MaxWidth="90"
                       TextAlignment="Center"
                       TextTrimming="CharacterEllipsis"
                       Foreground="{DynamicResource TextPrimaryBrush}"/>
        </StackPanel>
    </Button>
</UserControl>
